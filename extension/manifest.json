{
  "manifest_version": 3,
  "name": "VoiceCare AI",
  "description": "Reads webpages and summarizes them using AI",
  "version": "1.0",

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": ["activeTab"],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
